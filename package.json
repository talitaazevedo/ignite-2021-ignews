{
    "name": "ignews",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "prettier": "npx prettier --write --ignore-unknown .",
        "lint": "next lint",
        "lintMD": "markdownlint pages/*.md"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npx lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.ts": [
            "npx pretty-quick --staged",
