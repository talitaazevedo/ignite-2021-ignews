        "faunadb": "^4.3.0",
        "next": "^11.0.1",
        "react": "17.0.2",
        "react-dom": "17.0.2",
        "react-icons": "^4.2.0",
        "sass": "^1.35.2",
        "stripe": "^8.165.0"
    },
    "devDependencies": {
        "@types/node": "^16.4.0",
        "@types/react": "^17.0.14",
        "eslint": "7.31.0",
        "eslint-config-next": "11.0.1",
        "husky": "~4",
        "lint-staged": "^11.0.1",
        "prettier": "^2.3.2",
        "pretty-quick": "^3.1.1",
        "typescript": "^4.3.5"
    }
